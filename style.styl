*
{
    margin 0
    padding 0
    box-sizing: border-box
    font-family 'montserrat', sans-serif
}

.game_container
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    margin 10px 0
    gap: 10px;

.winner
    color lightseagreen

.cells_container
    display: grid
    grid-template-columns: repeat(3, 100px)
    grid-gap 2px
    background: #000
    border 2px solid #000

.cell
    height 100px
    width 100px
    font-size 70px
    text-align: center
    background: #fff
    cursor pointer
    user-select: none

.turn_info
    font-size 40px
    font-weight bold
    color lime

.restart_button
    font-size 25px
    border 2px solid #000
    padding 10px 20px
    cursor pointer